<section class="row">
  <div class = "column">
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <textarea id="post-text" name="post-text"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
  <div class = "column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>

</section>
<br><br><br>
<hr class="hrline"/>


{{#if posts.length}}
<section>
  <h2 style="text-align: center; color: #07800d">Your Posts</h2>
  <hr class="hrline"/>
  <br>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="sign-link">Update Post</a>
      <hr/>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<!--Script to add a post-->
<script src="/javascript/add-post.js"></script>